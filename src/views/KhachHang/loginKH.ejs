                                                    <p>   
                                                        <label for="emaildk">Email address  <span style="color: red;">*</span></label>
                                                        <input required id="emaildk" type="email" name="emaildk">
                                                     </p>
                                                     <p>   
                                                        <label for="name">Name  <span style="color: red;">*</span></label>
                                                        <input required id="name" type="text" name="name">
                                                     </p>
                                                     <p>   
                                                        <label for="passdk">Passwords <span style="color: red;">*</span></label>
                                                        <input required id="passdk" type="password" name="passdk">
                                                     </p>
                                                    <div class="login_submit">
                                                        <button type="submit" style="border: none;">Register</button>                                                      
                                                        <span id="statusMessage" style="color: blue; font-size: 18px;"></span>
                                                    </div>
                                                </form>
                                            </div>    
                                        </div>                                       
                                        <!--register area end-->                                       
                                        
                            </div>
