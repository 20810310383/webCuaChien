                       <!-- customer login start -->
                        <div class="customer_login">
                            <div class="row">
                                       <!--login area start-->
                                        <div class="col-lg-6 col-md-6">
                                            <div class="account_form">
                                                <h2>login</h2>
                                                <form action="/dang-nhap-tkkh" method="post" id="login-form">
                                                    <p>   
                                                        <label for="username_email">Username or email <span style="color: red;">*</span></label>
                                                        <input required id="username_email" type="email" name="username_email">
                                                     </p>
                                                     <p>   
                                                        <label for="passLogin">Passwords <span style="color: red;">*</span></label>
                                                        <input required id="passLogin" type="password" name="passLogin">
                                                     </p>   
                                                    <div class="login_submit">
                                                        <button type="submit">login</button>
                                                        <label for="remember">
                                                            <input id="remember" type="checkbox">
                                                            Remember me
                                                        </label>
                                                        <a href="#" style="font-size: 18px;" data-toggle="modal" data-target="#exampleModalCenter">Bấm vào đây để lấy lại mật khẩu?</a>
                                                    </div>
                                                    <span id="statusMessageLogin" style="color: blue; font-size: 18px; position: relative; top: 5px;"></span>                                                    

                                                </form>

                                                <!-- Modal -->
                                                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLongTitle" style="color: red; font-family: Arial, Helvetica, sans-serif;">Nhập Email đăng nhập của bạn để lấy lại mật khẩu?</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <form id="doi-mk" method="post" action="/quen-mat-khau">
                                                            <div class="modal-body">
                                                                <!-- <form> -->
                                                                    <div class="form-group">
                                                                    <label for="recipient-name" class="col-form-label">Email của bạn:</label>
                                                                    <input name="email_doimk" type="text" class="form-control" id="recipient-name" placeholder="Nhập email của bạn...">
                                                                        <span></span>
                                                                    </div>
                                                                    
                                                                <!-- </form> -->
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button style="border-radius: 5px; cursor: pointer;" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                                <button style="border-radius: 5px; cursor: pointer;" type="submit" class="btn btn-primary">Lấy lại mật khẩu</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    </div>
                                                </div>

                                             </div>     
