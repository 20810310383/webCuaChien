                <option value="3">3</option>
                <option value="6">6</option>
                <option value="9">9</option>
            </select>
            <span>Products by page</span>
        </form> -->
    </div>
    
    <nav aria-label="...">
        <ul style="font-size: 25px;" class="pagination">

            <% 
                const pre = curPage <= 1 ? curPage : curPage - 1; 
                const next = curPage >= soTrang ? curPage : parseInt(curPage) + 1   
                <!-- const queryParams = searchSPSession ? `&SapXepTheoGia=${ss}&idPL=${searchSPSession}` : `&SapXepTheoGia=${ss}`;                   -->
                let queryParams = '';
                if (searchSPSession) {
                    queryParams += `SapXepTheoGia=${ss}`;
                    if (searchSPSession !== '') {
                        queryParams += `&idPL=${searchSPSession}`;
                    }
                } else {
                    queryParams += `SapXepTheoGia=${ss}`;
                }
                queryParams += `&price=${price}`; // Thêm giá trị price vào queryParams
            %>  
            <li class="page-item disabled">
              <a class="page-link" href="/shop-list-ht1?<%=queryParams%>&page=<%=pre%>">&laquo;</a>
            </li>

           <% for(var i=1; i <=soTrang; i++) { 
                        var active="" ; 
                        if(i == curPage) active="active" ; %>
        
            <li class="<%=active%> page-item " aria-current="page">
                <a  class="page-link" href="/shop-list-ht1?<%=queryParams%>&page=<%=i%>">
                    <%=i%>                          
                </a>
            </li>
        
            <% } %>

            <li class="page-item">
                <a class="page-link" href="/shop-list-ht1?<%=queryParams%>&page=<%=next%>">&raquo;</a>
            </li>
          
        </ul>
    </nav>

    <div class="page_number">
        <!-- <span>Pages: </span>
