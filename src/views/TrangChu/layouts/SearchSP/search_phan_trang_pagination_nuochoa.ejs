<div class="pagination_style" >
    <div class="item_page">
    </div>
    
    <nav aria-label="...">
        <ul style="font-size: 25px;" class="pagination">

            <% 
                const pre = curPage <= 1 ? curPage : curPage - 1; 
                const next = curPage >= soTrang ? curPage : parseInt(curPage) + 1            
            %>  
            <li class="page-item disabled">
              <a class="page-link" href="/search-nuoc-hoa?search_nuochoa=<%=searchSPSession%>&page=<%=pre%>">&laquo;</a>              
            </li>

           <% for(var i=1; i <=soTrang; i++) { 
                        var active="" ; 
                        if(i == curPage) active="active" ; %>
        
            <li class="<%=active%> page-item " aria-current="page">
                <a  class="page-link" href="/search-nuoc-hoa?search_nuochoa=<%=searchSPSession%>&page=<%=i%>">
                    <%=i%>                          
                </a>
            </li>
        
            <% } %>

            <li class="page-item">
                <a class="page-link" href="/search-nuoc-hoa?search_nuochoa=<%=searchSPSession%>&page=<%=next%>">&raquo;</a>
            </li>
          
        </ul>
    </nav>

    <div class="page_number">
    </div>
</div>

