<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("../../partials/danhMuc.ejs") %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search -->
                    <form action="/search-qly-nuoc-hoa" method="get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" id="search-ben-admin">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Tìm kiếm nước hoa đi sếp..." name="search_ben_admin"
                                aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    <%- include("../../partials/topAccount.ejs") %>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <a href="/da-xoa-sp-nuochoa" class="btn btn-danger">Sản phẩm đã xóa</a>                   
                        <h1 class="h3 mb-0 text-gray-800">Quản lý sản phẩm nước hoa</h1>     
                        <a href="/create-sp-nuochoa" class="btn btn-primary">Thêm sản phẩm</a>                   
                    </div> 
                    
                    <!-- Content Row -->
                    
                
                    <!-- Content Row -->

                    <!-- Content Row -->
                    <div class="row">
                        <div class="scrollable-content" style="max-height: 800px; max-width: 1655px;overflow-x: auto; overflow-y: auto;">
                            <table class="table table-hover">
                                <thead>                                
                                    <tr style="background-color: #DC143C; color: white; font-size: 18px; ">
                                        <th style="text-align: center; vertical-align: middle;">STT</th>
                                        <th style="text-align: center; vertical-align: middle;">Hình Ảnh</th>
                                        <th style="width: 150px;text-align: center; vertical-align: middle;">Tên SP</th>
                                        <th style="text-align: center; vertical-align: middle;">Giá mới</th>
                                        <th style="text-align: center; vertical-align: middle;">Giá cũ</th>
                                        <th style="text-align: center; vertical-align: middle;">Số lượng tồn</th>
                                        <th style="text-align: center; vertical-align: middle;">Loại SP</th>
                                        <th style="text-align: center; vertical-align: middle;">Nam/Nữ</th>
                                        <th style="text-align: center; vertical-align: middle;">New/Hot</th>
                                        <th style="text-align: center; vertical-align: middle;">Mới/Nổi Bật</th>
                                        <th style="text-align: center; vertical-align: middle;">Hiển thị/Ẩn</th>
                                        <th style="width: 200px; text-align: center; vertical-align: middle; ">Mô tả</th>                                    
                                        <th style="text-align: center; vertical-align: middle;">Chức Năng</th>
                                    </tr>
                                </thead>
                                <tbody>  
                                    <%
                                    <!-- Tính toán số thứ tự bắt đầu của sản phẩm đầu tiên trên trang -->
                                    const startIndex = (curPage - 1) * itemsPerPage + 1;

                                    <!-- Tính toán số thứ tự của các sản phẩm tiếp theo trên trang -->
                                    const endIndex = Math.min(startIndex + itemsPerPage - 1, totalItems);
                                    %> 
                                    <!-- Hiển thị all sản phẩm - end -->  
                                    <% all.forEach(function(allsp, index) { %>                                                       
                                    <tr >   
                                        <td style="font-weight: bold; color: #180766; font-size: 18px; text-align: center; vertical-align: middle;"><%= startIndex  + index %></td>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       
                                        <td style="text-align: center; vertical-align: middle;  width: 200px;font-weight: bold; color: #180766; font-size: 18px;">
                                            <img  src="images/upload/<%= getRelativeImagePath(allsp.Image) %>" class="img-fluid" alt="Image">
                                        </td>                                                                                                                                                                                                                                                                                                                       
                                        <td style="font-weight: bold; color: #180766; font-size: 18px; text-align: center;vertical-align: middle;"><%= allsp.TenSP %></td>
                                        <td style="font-weight: bold; color: #180766; font-size: 18px; text-align: center;vertical-align: middle;"><%= formatCurrency(allsp.GiaBan) %></td>                                  
                                        <td style="font-weight: bold; color: #180766; font-size: 18px; text-align: center;vertical-align: middle;"><%= formatCurrency(allsp.GiaCu) %></td>                                                                                                                                                                                                                                                                                                                        
                                        <td style="font-weight: bold; color: #180766; font-size: 18px; text-align: center;vertical-align: middle;"><%= allsp.SoLuongTon %></td>                                                                                                                                                                                                                                                                                                                        
                                        <td style="font-weight: bold; color: #180766; font-size: 18px; text-align: center;vertical-align: middle;"><%= allsp.IdLoaiSP.TenLoaiSP %></td>                                                                                                                                                                                                                                                                                                                        
                                        <td style="font-weight: bold; color: #180766; font-size: 18px; text-align: center;vertical-align: middle;"><%= allsp.IdNam_Nu.TenLoaiNamNu %></td>                                                                                                                                                                                                                                                                                                                        
                                        <td style="font-weight: bold; color: #180766; font-size: 18px; text-align: center;vertical-align: middle;"><%= allsp.New_Hot %></td>                                                                                                                                                                                                                                                                                                                        
                                        <td style="font-weight: bold; color: #180766; font-size: 18px; text-align: center;vertical-align: middle;"><%= allsp.SpMoi_SpNoiBat %></td>   
                                        <% if (!allsp.deleted) { %>
                                            <td style="font-weight: bold; color: #ff0000; font-size: 18px; text-align: center;vertical-align: middle;">Hiển thị</td>
                                        <% } else { %>
                                            <td></td>
                                        <% } %>                                                                                                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                                                                                                                                
                                        <td>
                                            <div class="scrollable-content" style="max-height: 300px; max-width: 300px;overflow-x: auto; overflow-y: auto;">
                                                <p class="design" id="motaODay<%= allsp._id %>"></p>
                                                <span style="display: none;" id="inpMoTa<%= allsp._id %>"><%= (allsp.MoTa) %></span>
                                        
                                                <script>
                                                    // Wait for the entire document to be loaded before executing any JavaScript
                                                    document.addEventListener("DOMContentLoaded", function() {
                                                        // Get the value from the span element with the id "inpMoTa"
                                                        var inpMoTa = document.getElementById("inpMoTa<%= allsp._id %>").innerText;
                                                        
                                                        // Set the inner HTML of the paragraph element with the id "motaODay"
                                                        document.getElementById("motaODay<%= allsp._id %>").innerHTML = inpMoTa;
                                                    });  
                                                </script>
                                            </div>
                                        </td>                                                                                                                                                                                                                                                                                                                        
                                        <td style="text-align: center; vertical-align: middle;">
                                            <a 
                                                class="btn btn-success button-SUA-XOA" 
                                                href="/edit-sp-nuochoa?idEdit=<%= allsp._id %>">Edit</a>   
                                                            
                                            <a                                                
                                                id="deleteButton" 
                                                class="btn btn-danger" 
                                                data-toggle="modal" data-target="#exampleModalCenter<%= allsp._id %>"
                                            >Delete</a>  
                                            
                                            <!-- Modal -->
                                            <div class="modal fade" id="exampleModalCenter<%= allsp._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">Xoá sản phẩm?</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Bạn có chắc chắn muốn xoá sản phẩm <span style="color: red;"><%= allsp.TenSP %></span> này không?
                                                    </div>
                                                    <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                                                    <button type="button" class="btn btn-danger" onclick="deleteSP('<%= allsp._id %>')">Đồng ý xoá</button>
                                                    </div>
                                                </div>
                                                </div>
                                            </div>

                                        </td>                                  
                                    </tr>                                
                                    <% }); %>                                         
                                    <!-- Hiển thị all sản phẩm - end -->   
                                </tbody>
                            </table> 
                        </div>                      
                    </div>
                    
                </div>
                <!-- /.container-fluid -->

                <!-- đoạn này phân trang -->
                <div class="pagination-container">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                        <% 
                          const pre = curPage <= 1 ? curPage : curPage - 1; 
                          const next = curPage >= soTrang ? curPage : parseInt(curPage) + 1            
                        %>
                            <li class="page-item">
                                <a class="page-link" style=" font-weight: bolder;" href="/page-qly-nuoc-hoa?page=<%=pre%>">
                                    &lt;
                                </a>
                            </li>
                        <% for(var i=1; i <=soTrang; i++) { 
                            var active="" ; 
                            if(i == curPage) active="active" ; %>
                            <li class="page-item <%=active%>">
                                <a class="page-link" style="font-size: 18px; font-weight: bolder;"  href="/page-qly-nuoc-hoa?page=<%=i%>">
                                    <%=i%>                          
                                </a>
                            </li>                
                        <% } %>                                                      
                            <li class="page-item">
                                <a class="page-link" style=" font-weight: bolder;" href="/page-qly-nuoc-hoa?page=<%=next%>">
                                    &gt;
                                </a>
                            </li>                     
                        </ul>
                    </nav>
                </div> 
                <!-- đoạn này phân trang - end -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>WebShop &copy; Khắc Tú</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Bạn có chắc chắn muốn đăng xuất không?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Ấn vào "Logout" để xác nhận đăng xuất.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/login-admin">Logout</a>
                </div>
            </div>
        </div>
    </div>
    

    <!-- Bootstrap core JavaScript-->
    <script src="AdminQL/HomeAdminQL/vendor/jquery/jquery.min.js"></script>
    <script src="AdminQL/HomeAdminQL/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="AdminQL/HomeAdminQL/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="AdminQL/HomeAdminQL/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="AdminQL/HomeAdminQL/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="AdminQL/HomeAdminQL/js/demo/chart-area-demo.js"></script>
    <script src="AdminQL/HomeAdminQL/js/demo/chart-pie-demo.js"></script>

    <script src="assets\js\hamDinhDangTien_VaLinkAnh.js"></script>
    <script src="AdminQL/HomeAdminQL/js/xuLyNutXoaSP.js"></script>
    <script src="AdminQL/HomeAdminQL/thuVienToastr/toastr.min.js"></script>



    
</body>

</html>