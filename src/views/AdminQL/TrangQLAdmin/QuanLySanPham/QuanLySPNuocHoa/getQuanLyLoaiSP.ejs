    <script>
        function suaLoaiSP(idSua) {
            fetch(`/sua-loaisp-nuoc-hoa/${idSua}`, {
                    method: 'POST',
                    // headers: {
                    //     'Content-Type': 'application/json'
                    // },
                    body: formData
                    // Có thể thêm các tùy chọn khác như body nếu cần
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {

                        toastr.options = {
                            "closeButton": true,
                            "debug": false,
                            "newestOnTop": true,
                            "progressBar": true,
                            "positionClass": "toast-top-right",
                            "preventDuplicates": false,
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "1500",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
                        toastr["success"](data.message, "Thành Công!")
                        setTimeout(function() {
                            toastr.clear();
                            // window.location.reload();
                            window.location.href = "/trang-quan-ly-loaisp";
                        }, 1500); 

                        // alert(data.message)
                    } else {
                        // Show error alert
                        toastr.error('Có lỗi xảy ra khi sửa. Vui lòng thử lại sau.', 'Lỗi!');
                    }
                })
                .catch(error => {
                    console.error("Error:", error);
                });
        }
    </script>

    <!-- thêm loại sản phẩm -->
    <script>
        function createLoaiSP() {
            // Lấy các giá trị từ form
            const ThemTenLoaiSP = document.getElementById('ThemTenLoaiSP').value;
            
            // Dữ liệu cập nhật
            const createData = {
                ThemTenLoaiSP: ThemTenLoaiSP,
            };

            fetch(`/them-loaisp-nuoc-hoa`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(createData) // Chuyển đổi dữ liệu cập nhật thành chuỗi JSON và gửi đi
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success alert
                    toastr.options = {
                            "closeButton": true,
                            "debug": false,
                            "newestOnTop": true,
                            "progressBar": true,
                            "positionClass": "toast-top-right",
                            "preventDuplicates": false,
                            "onclick": null,
                            "showDuration": "300",
                            "hideDuration": "1000",
                            "timeOut": "1500",
                            "extendedTimeOut": "1000",
                            "showEasing": "swing",
                            "hideEasing": "linear",
                            "showMethod": "fadeIn",
                            "hideMethod": "fadeOut"
                        }
                        toastr["success"](data.message, "Thành Công!")
                        setTimeout(function() {
                            toastr.clear();
                            window.location.reload();
                            // window.location.href = "/trang-quan-ly-loaisp";
                        }, 1500); 
                } else {                
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: data.message,
                        confirmButtonText: 'OK SHOP'
                    });                       
                }
            })
            .catch(error => {
                console.error("Error:", error);
            });
        }
    </script>
    
