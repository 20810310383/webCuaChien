                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->
                    <%- include("../partials/topAccount.ejs") %>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Tạo tài khoản đi cậu</h1>                        
                    </div>                

                    <!-- Content Row -->
                    <div class="row">
                        <div class="container" style="display: flex; justify-content: center;">
                            <form >
                                <div class="mb-3">                                  
                                    <label for="TenDangNhap" class="form-label">Tài khoản đăng nhập <span style="color: red;font-size: 16px;">*</span></label>
                                    <input style="width: 400px;" type="text" class="form-control" name="TenDangNhap" id="TenDangNhap" aria-describedby="emailHelp" required>
                                    <div id="username-error" class="form-text text-danger"></div>
                                </div>

                                <div class="mb-3">
                                    <label for="HoTen" class="form-label">Họ và tên <span style="color: red;font-size: 16px;">*</span></label>
                                    <input style="width: 400px;" type="text" class="form-control" name="HoTen" id="HoTen" aria-describedby="emailHelp" required>
                                    <div id="name-error" class="form-text text-danger"></div>
                                </div>

                                <div class="mb-3">
                                    <label for="MatKhau" class="form-label">Mật khẩu <span style="color: red;font-size: 16px;">*</span></label>
                                    <input style="width: 400px;" type="password" class="form-control" name="MatKhau" id="MatKhau" required>  
                                    <br>                                  
                                    <a id="togglePassword" style="cursor: pointer;"> <i class="fas fa-eye-slash" style="color: blue; margin-left: 20px; cursor: pointer;"></i>&nbsp;Hiển thị mật khẩu</a>
                                    <div id="password-error" class="form-text text-danger"></div>
                                </div>
                                
                                <a                                      
                                    onclick="history.go(-1);"
                                    class="btn btn-dark" >Trở Về </a>
                                
                                <a                                                
                                    class="btn btn-primary" 
                                    onclick="createAdmin()"
                                >Tạo Mới</a>   
                            </form>    
                        </div>
                                         
                    </div>

                </div>
                <!-- /.container-fluid -->
                
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
